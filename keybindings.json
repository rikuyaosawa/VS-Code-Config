[
  // file tree
  {
    "key": "space e e",
    "command": "workbench.view.explorer",
    "when": "editorTextFocus && vim.active && !inDebugRepl && vim.mode != 'Insert'"
  },
  {
    "key": "space e e",
    "command": "workbench.action.toggleSidebarVisibility",
    "when": "explorerViewletFocus && !inputFocus"
  },
  {
    "key": "space e t",
    "command": "workbench.action.toggleSidebarVisibility",
    "when": "(editorTextFocus && vim.mode != 'Insert') || (explorerViewletFocus && !inputFocus)"
  },
  {
    "key": "space a f",
    "command": "workbench.files.action.createFileFromExplorer",
    "when": "explorerViewletFocus && !inputFocus"
  },
  {
    "key": "space a d",
    "command": "workbench.files.action.createFolderFromExplorer",
    "when": "explorerViewletFocus && !inputFocus"
  },
  {
    "key": "space d",
    "command": "deleteFile",
    "when": "explorerViewletFocus && !inputFocus"
  },
  // search
  {
    "key": "space f f",
    "command": "find-it-faster.findFiles", // require FindItFaster ext.
    "when": "(editorTextFocus && vim.mode != 'Insert') || (explorerViewletFocus && !inputFocus)"
  },
  {
    "key": "space f s",
    "command": "find-it-faster.findWithinFiles", // require FindItFaster ext.
    "when": "(editorTextFocus && vim.mode != 'Insert') || (explorerViewletFocus && !inputFocus)"
  },
  // split view
  {
    "key": "space s v",
    "command": "workbench.action.splitEditorRight",
    "when": "editorTextFocus && vim.mode != 'Insert'"
  },
  {
    "key": "space s h",
    "command": "workbench.action.splitEditorDown",
    "when": "editorTextFocus && vim.mode != 'Insert'"
  },
  {
    "key": "shift+k",
    "command": "editor.action.showHover",
    "when": "editorTextFocus && vim.active && !inDebugRepl && vim.mode != 'Insert'"
  },
  {
    "key": "ctrl+o",
    "command": "workbench.action.navigateBackInNavigationLocations"
  },
  {
    "key": "ctrl+o",
    "command": "workbench.action.navigateBack",
    "when": "canNavigateBack"
  },
  {
    "key": "ctrl+i",
    "command": "workbench.action.navigateForwardInNavigationLocations"
  },
  {
    "key": "ctrl+i",
    "command": "workbench.action.navigateForward",
    "when": "canNavigateForward"
  },
  {
    "key": "ctrl+enter",
    "command": "code-runner.run" // require Code Runner ext.
  }
]
